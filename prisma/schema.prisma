generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
  

model Query {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  prompt    String
  createdAt DateTime @default(now())
  responses Response[]
}

model Response {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  queryId   String   @db.ObjectId
  provider  String
  content   String
  latencyMs Int
  createdAt DateTime @default(now())

  query Query @relation(fields: [queryId], references: [id])
}